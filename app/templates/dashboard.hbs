{{#if session.hasUser}}
  {{dashboard/quick-update}}

  <div class="feed-container row {{if session.hasUser "quick-update-enabled" "guest-banner-enabled"}}">
    {{! Kitsu Dashboard Top }}
    {{ad-unit unit="kitsu.dashboard.top"
      targeting=(hash section="dashboard")
      sizes=(hash
        mobile=(array (array 320 100) (array 320 50))
        tablet=(array 728 90)
        desktop=(array (array 970 90) (array 728 90))
      )}}

    {{! Feed Aside }}
    <div class="feed-aside">
      <div class="is-sticky">
        <ul>
          <li>
            <a href="#" class="timeline-link {{if (eq streamType "timeline") "active"}}" {{action "switchFeed" "timeline"}}>
              {{svg-jar "user"}}
              Following
            </a>
          </li>
          <li>
            <a href="#" class="timeline-link {{if (eq streamType "global") "active"}}" {{action "switchFeed" "global"}}>
              {{svg-jar "globe"}}
              Global
            </a>
          </li>
        </ul>

        {{! Groups }}
        {{dashboard/unread-groups class="sidebar-item"}}
      </div>
    </div>

    {{! Feed }}
    <div class="feed-stream col-sm">
      {{#if (and session.hasUser (and (eq streamType "global") (eq session.account.postsCount 0)))}}
        {{dashboard/onboarding/feed-notice}}
      {{/if}}

      {{stream-feed/list
        streamType=streamType
        streamId=streamId
        streamFilter=(if (eq streamType "global") "user" "all")
        readOnly=(cannot "write post")}}
      </div>

    <div class="feed-sidebar">
      <div class="is-sticky">
        {{! Blotter }}
        <div class="user-blotter card">
          <h6>Recommendations are live!</h6>
          <p>We're excited to share our new recommendation engine with the community.</p>
          <div class="featured-image">
            <img src="https://media.giphy.com/media/bMLGNRoAy0Yko/giphy.gif">
          </div>
          <button class="button button--primary">
            <span class="button-label">Learn More</span>
          </button>
          <span class="dismiss-blotter">
            <svg width="12" height="12" viewBox="0 0 12 12" xmlns="http://www.w3.org/2000/svg"><path d="M6 4.586l4.24-4.24c.395-.395 1.026-.392 1.416-.002.393.393.39 1.024 0 1.415L7.413 6l4.24 4.24c.395.395.392 1.026.002 1.416-.393.393-1.024.39-1.415 0L6 7.413l-4.24 4.24c-.395.395-1.026.392-1.416.002-.393-.393-.39-1.024 0-1.415L4.587 6 .347 1.76C-.05 1.364-.048.733.342.343c.393-.393 1.024-.39 1.415 0L6 4.587z" fill-rule="evenodd"></path>
            </svg>
          </span>
        </div>

        {{! Onboarding }}
        {{#if (and session.hasUser (not session.account.feedCompleted))}}
          {{dashboard/onboarding/checklist-progress user=session.account class="sidebar-item"}}
        {{/if}}



        {{! Kitsu Dashboard Sidebar Ad }}
        {{! Hidden on mobile currently }}
        {{ad-unit unit="kitsu.dashboard.sidebar"
          targeting=(hash section="dashboard")
          sizes=(hash
            tablet=(array (array 336 280) (array 300 250))
          )}}

        {{! Footer }}
        {{sidebar-footer class="sidebar-item"}}
      </div>
    </div>
  </div>
{{else}}
  {{trending/trending-page}}
{{/if}}
