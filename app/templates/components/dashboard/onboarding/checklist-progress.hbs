<div class="checklist card">
  <h6>Getting Started on Kitsu</h6>
  <div class="steps-remaining">
    4 steps left! 🦊
    <svg class="rc-progress-line progressBar_35bcd" viewBox="0 0 100 4" preserveAspectRatio="none" data-reactid="1130">
      <path class="rc-progress-line-trail" d="M 2,2 L 98,2" stroke-linecap="round" stroke="#D9D9D9" stroke-width="1" fill-opacity="0" data-reactid="1131"></path>
      <!-- @vevix, to change the progress amount, adjust the
      'stroke-dashoffset' in reverse order in increments of 20
      e.g. 80 = 1 step complete, 60 = 2 steps complete, 40 = 3 steps, etc. -->
      <path class="rc-progress-line-path" d="M 2,2 L 98,2" stroke-linecap="round" stroke="#FD755C" stroke-width="4" fill-opacity="0" style="stroke-dasharray:100px, 100px; stroke-dashoffset:80px; transition:stroke-dashoffset 0.3s ease 0s, stroke 0.3s linear;" data-reactid="1132"></path>
    </svg>
  </div>
  <ul>
    {{! default checked }}
    <li class="step step--complete">
      <span class="step-status">☑️</span>
      <span class="step-description">Visit your feed</span>
    </li>

    <li class="step {{if hasRatings "step--complete"}}">
      <span class="step-status">
        {{#if hasRatings}}
          ☑️
        {{else}}
          ⭐
        {{/if}}
      </span>
      <span class="step-description">
        {{#if hasRatings}}
          Rate 5 anime or manga
        {{else}}
          Rate {{ratingsLeft}} anime or manga
        {{/if}}
      </span>
    </li>

    <li class="step {{if hasFollows "step--complete"}}">
      <span class="step-status">
        {{#if hasFollows}}
          ☑️
        {{else}}
          👀
        {{/if}}
      </span>
      <span class="step-description">
        {{#if hasFollows}}
          Follow 5 users
        {{else}}
          Follow {{pluralize followsLeft "user"}}
        {{/if}}
      </span>
    </li>

    <li class="step {{if hasComments "step--complete"}}">
      <span class="step-status">
        {{#if hasComments}}
          ☑️
        {{else}}
          ✍️
        {{/if}}
      </span>
      <span class="step-description">Comment on a post</span>
    </li>

    <li class="step {{if hasLikes "step--complete"}}">
      <span class="step-status">
        {{#if hasLikes}}
          ☑️
        {{else}}
          😍
        {{/if}}
      </span>
      <span class="step-description">
        {{#if hasLikes}}
          Like 3 feed posts
        {{else}}
          Like {{likesLeft}} feed posts
        {{/if}}
      </span>
    </li>
  </ul>
</div>
